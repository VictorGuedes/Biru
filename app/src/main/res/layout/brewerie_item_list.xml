<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/brewerie_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:id="@+id/brewerie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/brewerie_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constrainedWidth="true"
        tools:ignore="MissingConstraints"
        tools:text="2Kids Brewing fsgfdgfdgfggg">

    </TextView>

    <TextView
        android:id="@+id/brewerie_city_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2Kids Brewing Company"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/brewerie_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brewerie_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/brewerie_city_state"
        android:background="@color/black">

    </View>


</androidx.constraintlayout.widget.ConstraintLayout>